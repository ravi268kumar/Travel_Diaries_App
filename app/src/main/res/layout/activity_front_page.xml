<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.infinium.rajukoushik.traveldiaries.front_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">
        <ViewFlipper
            android:id="@+id/flipper"
            android:alpha=".3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/france_travel"/>
            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/place_7"/>
            <ImageView
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/place_3"/>
            <ImageView
                android:id="@+id/img4"

                android:alpha=".8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/place_6"/>
        </ViewFlipper>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">7

        <ImageView
            android:id="@+id/log_travel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha=".4"
            android:layout_below="@+id/logo_travel"
            android:src="@drawable/gps_location"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/tdlogo2"
            android:alpha=".4"
            android:id="@+id/logo_travel"

            />


    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">


            <Button
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:text="Login"
                android:onClick="Loginbutton"
                android:textSize="20dp"
                android:textColor="#000"
                android:background="#FF8F10"
                android:id="@+id/login"
                />



            <Button
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:text="SignUp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="#000"
                android:background="#FF8F10"
                android:id="@+id/signup"
                />







        </LinearLayout>

    </ScrollView>




</RelativeLayout>





